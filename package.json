{
  "name": "boilerplate-express-typescript",
  "version": "0.1.0",
  "description": "A starting point for Node.js express with typescript",
  "author": "Andre Santos",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "yarn run serve",
    "build": "rimraf ./dist && yarn run build-ts && yarn run tslint",
    "watch": "nodemon --config ./nodemon.json",
    "serve": "node dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "./node_modules/.bin/tslint -c tslint.json -p tsconfig.json",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "./node_modules/.bin/concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "test": "jest --forceExit --coverage --verbose"

  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "cuid": "^2.1.6",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "helmet": "^3.15.1",
    "jsonwebtoken": "^8.5.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.16",
    "morgan": "^1.9.1",
    "yup": "^0.26.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.26",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/helmet": "^0.0.42",
    "@types/lodash": "^4.14.121",
    "@types/mongodb": "^3.1.20",
    "@types/mongoose": "^5.3.20",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.10.4",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-environment-node": "^24.0.0",
    "mongodb-memory-server": "^3.1.2",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  }
}
